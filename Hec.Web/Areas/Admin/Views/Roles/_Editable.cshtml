@model Hec.Entities.Role

@Html.AntiForgeryToken()
@Html.HiddenFor(m => m.Id)

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NeedZone, "Need to Specify Zone?", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <label class="checkbox-inline">
                @(Html.Kendo().CheckBoxFor(m => m.NeedZone))
            </label>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NeedSubZone, "Need to Specify Sub-Zone?", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <label class="checkbox-inline">
                @(Html.Kendo().CheckBoxFor(m => m.NeedSubZone))
            </label>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NeedUnit, "Need to Specify Unit?", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <label class="checkbox-inline">
                @(Html.Kendo().CheckBoxFor(m => m.NeedUnit))
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>