@model HandleErrorInfo
@{
    ViewBag.Title = "Session End";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HEC</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="@Url.Content("~/bootstrap/css/bootstrap.min.css")">

</head>
<body>
    <br /><br /><br />
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="panel panel-warning">
                <div class="panel-heading" style="text-align:center;">
                    <h2>You are logged out.</h2>
                </div>
                <div class="panel-body" style="text-align:center;">
                    <h4>You have been logged out of the system@(ViewBag.Timeout == true ? " due to inactivity" : "").</h4>
                    <div>If you would like to login again, kindly do so from <a href="https://mytnb.com.my/">myTNB</a> portal.</div>
                    <div>Or, you continue browsing as a guest. <a href="/">Go to the home page.</a></div>
                </div>
            </div>
        </div>
        <div class="col-sm-2"></div>
    </div>
</body>
</html>
