@model Hec.Web.Controllers.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<header id="header" class="single-menu flat-menu transparent valign font-color-light" data-plugin-options='{"stickyEnabled": true, "stickyBodyPadding": false}'>
    <div class="container">
        <div class="logo">
            <a href="@(Url.Action("Index", "Home", new { area = "" }))" class="logo">
                <img alt="Porto" width="111" height="54" data-sticky-width="82" data-sticky-height="40" src="~/Images/logo-hec.png">
            </a>
        </div>
        <button class="btn btn-responsive-nav btn-inverse" data-toggle="collapse" data-target=".nav-main-collapse">
            <i class="fa fa-bars"></i>
        </button>
    </div>
    <div class="navbar-collapse nav-main-collapse collapse">
        <div class="container">
            <ul class="social-icons">
                <li class="dribbble"><a href="https://www.mytnb.com.my/" target="_blank" title="MyTNB Customer Portal">MyTNB</a></li>
                <li class="digg"><a href="https://www.tnb.com.my/" target="_blank" title="TNB Website">TNB Website</a></li>
                @*<li class="login"><a data-toggle="modal" data-target="#loginBox" href="#" target="_blank" title="Login">Login</a></li>*@
            </ul>

            <nav class="nav-main mega-menu">
                <ul class="nav nav-pills nav-main" id="mainMenu">
                    <li class="active">
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <a href="/Public/UsageCalculator">Energy Usage Calculator </a>
                    </li>
                    <li>
                        <a href="/Public/EnergyTips">Energy Saving Tips </a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" href="/Public/ApplianceComparison">Appliance Calculator <i class="fa fa-angle-down"></i></a>
                        <ul class="dropdown-menu">
                            <li><a href="/Public/ApplianceComparison/SingleAppliance">Single Appliance</a></li>
                            <li><a href="/Public/ApplianceComparison/CompareAppliance">Compare Appliances</a></li>
                        </ul>
                    </li>

                </ul>
            </nav>
        </div>
    </div>
</header>

<div role="main" class="main">
    <div class="slider-container slider-container-fullscreen">
        <div class="slider" id="revolutionSliderFullScreen" data-plugin-revolution-slider data-plugin-options='{"fullScreen": "on"}'>
            <ul>
                <li data-transition="fade" data-slotamount="10" data-masterspeed="300">
                    <img src="/Images/slides/002.jpg" data-fullwidthcentering="on" alt="">

                    <div class="tp-caption sft stb visible-lg"
                         data-x="467"
                         data-y="60"
                         data-speed="300"
                         data-start="1000"
                         data-easing="easeOutExpo"><img src="/Images/slides/slide-title-border.png" alt=""></div>

                    <div class="tp-caption top-label lfl stl"
                         data-x="center" data-hoffset="0"
                         data-y="60"
                         data-speed="300"
                         data-start="500"
                         data-easing="easeOutExpo">Welcome to</div>
                    <div class="tp-caption sft stb visible-lg"
                         data-x="667"
                         data-y="60"
                         data-speed="300"
                         data-start="1000"
                         data-easing="easeOutExpo"><img src="/Images/slides/slide-title-border.png" alt=""></div>

                    <div class="tp-caption main-label sft stb"
                         data-x="center" data-hoffset="0"
                         data-y="80"
                         data-speed="300"
                         data-start="1500"
                         data-easing="easeOutExpo">HOME ENERGY</div>
                    <div class="tp-caption main-label sft stb"
                         data-x="center" data-hoffset="0"
